<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="planning-persistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<non-jta-data-source>jdbc/planningDs</non-jta-data-source>
		
		<class>org.ccsds.moims.mo.mal.planning.datamodel.ExecutionRunningConstraints</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.ExecutionTimingConstraints</class>
		
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequest</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestDefinition</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestDomain</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestArgumentDefinition</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestArgumentValue</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestStatus</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestTaskDefinition</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.PlanningRequestValue</class>
		
		<class>org.ccsds.moims.mo.mal.planning.datamodel.Task</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.TaskArgumentValue</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.TaskDefinition</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.TaskArgumentDefinition</class>
		<class>org.ccsds.moims.mo.mal.planning.datamodel.TaskStatus</class>
		
		<properties>
			<property name="eclipselink.logging.level" value="ALL" />
			<property name="eclipselink.logging.timestamp" value="true" />
			<property name="eclipselink.logging.thread" value="true" />
			<property name="eclipselink.logging.exceptions" value="true" />
			<property name="eclipselink.orm.throw.exceptions" value="true" />
			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />

			<!--property name="eclipselink.ddl-generation" value="drop-and-create-tables"/ -->
			<property name="eclipselink.weaving" value="false" />
			<property name="eclipselink.cache.shared.default" value="true" />
			<property name="eclipselink.deploy-on-startup" value="false" />
		</properties>
	</persistence-unit>
</persistence>

