<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="automation-persistence"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<non-jta-data-source>jdbc/automationDs</non-jta-data-source>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.Schedule</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleArgumentDefinition</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleArgumentValue</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleAttachment</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleDefinition</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleStatus</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ScheduleStatusMessage</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.Procedure</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureArgument</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureDefinition</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureDefinitionArgument</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureKeyValue</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureStatus</class>
		<class>org.ccsds.moims.mo.mal.automation.datamodel.ProcedureStatusMessage</class>
		<properties>
			<property name="eclipselink.logging.level" value="ALL" />
			<property name="eclipselink.logging.timestamp" value="true" />
			<property name="eclipselink.logging.thread" value="true" />
			<property name="eclipselink.logging.exceptions" value="true" />
			<property name="eclipselink.orm.throw.exceptions" value="true" />
			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />

			<!--property name="eclipselink.ddl-generation" value="drop-and-create-tables"/ -->
			<property name="eclipselink.weaving" value="false" />
			<property name="eclipselink.cache.shared.default" value="true" />
			<property name="eclipselink.deploy-on-startup" value="false" />
		</properties>
	</persistence-unit>
</persistence>

